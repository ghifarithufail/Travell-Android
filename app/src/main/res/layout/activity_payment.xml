<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payment">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:text="Ticket"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintStart_toEndOf="@+id/back"
        app:layout_constraintTop_toTopOf="@+id/back"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/black"
        android:background="@drawable/ic_baseline_arrow_back_ios_24"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="325dp"
        android:layout_height="630dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="83dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.492">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/up"
                android:layout_width="325dp"
                android:layout_height="70dp"
                android:layout_marginTop="1dp"
                android:backgroundTint="@color/button"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="260dp"
                        android:layout_height="41dp"
                        android:text="Silahkan masukan data sesuai dengan data diri anda"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.246"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.448" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="-28dp"
                tools:layout_editor_absoluteY="1dp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="40dp"
                    app:cardCornerRadius="10dp">


                    <EditText
                        android:id="@+id/LN"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/tiket"
                        android:elevation="10dp"
                        android:ems="10"
                        android:hint="Last Name"
                        android:inputType="textPersonName"
                        android:paddingStart="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/name" />

                    <EditText
                        android:id="@+id/FN"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/tiket"
                        android:elevation="10dp"
                        android:ems="10"
                        android:hint="First Name"
                        android:inputType="textPersonName"
                        android:paddingStart="10dp"
                        app:layout_constraintEnd_toStartOf="@+id/LN"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/name" />


                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="90dp"
                        android:text="Name"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        app:layout_constraintStart_toStartOf="@+id/FN"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Email"
                        android:textColor="@color/black"
                        android:textSize="23dp"
                        app:layout_constraintStart_toStartOf="@+id/FN"
                        app:layout_constraintTop_toBottomOf="@+id/FN" />

                    <EditText
                        android:id="@+id/Email"
                        android:layout_width="290dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="55dp"
                        android:background="@drawable/tiket"
                        android:elevation="10dp"
                        android:ems="10"
                        android:hint="Input Email"
                        android:inputType="textEmailAddress"
                        android:paddingStart="10dp"
                        app:layout_constraintEnd_toEndOf="@+id/LN"
                        app:layout_constraintStart_toStartOf="@+id/FN"
                        app:layout_constraintTop_toBottomOf="@+id/FN" />

                    <EditText
                        android:id="@+id/DateT"
                        android:layout_width="290dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="55dp"
                        android:background="@drawable/tiket"
                        android:elevation="10dp"
                        android:ems="10"
                        android:hint="Input Date"
                        android:paddingStart="10dp"
                        app:layout_constraintEnd_toEndOf="@+id/LN"
                        app:layout_constraintStart_toStartOf="@+id/FN"
                        app:layout_constraintTop_toBottomOf="@+id/Email" />

                    <EditText
                        android:id="@+id/Birthday"
                        android:layout_width="290dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="55dp"
                        android:background="@drawable/tiket"
                        android:elevation="10dp"
                        android:ems="10"
                        android:hint="Input Birthday"
                        android:paddingStart="10dp"
                        app:layout_constraintEnd_toEndOf="@+id/LN"
                        app:layout_constraintStart_toStartOf="@+id/FN"
                        app:layout_constraintTop_toBottomOf="@+id/DateT" />

                    <EditText
                        android:id="@+id/Address"
                        android:layout_width="290dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="55dp"
                        android:background="@drawable/tiket"
                        android:elevation="10dp"
                        android:ems="10"
                        android:hint="Input Address"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        app:layout_constraintEnd_toEndOf="@+id/LN"
                        app:layout_constraintStart_toStartOf="@+id/FN"
                        app:layout_constraintTop_toBottomOf="@+id/Birthday" />

                    <EditText
                        android:id="@+id/Phone"
                        android:layout_width="290dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="55dp"
                        android:background="@drawable/tiket"
                        android:elevation="10dp"
                        android:ems="10"
                        android:hint="Input Phone"
                        android:inputType="number"
                        android:paddingStart="10dp"
                        app:layout_constraintEnd_toEndOf="@+id/LN"
                        app:layout_constraintStart_toStartOf="@+id/FN"
                        app:layout_constraintTop_toBottomOf="@+id/Address" />

                    <EditText
                        android:id="@+id/City"
                        android:layout_width="290dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="55dp"
                        android:background="@drawable/tiket"
                        android:elevation="10dp"
                        android:ems="10"
                        android:hint="Input City"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        app:layout_constraintEnd_toEndOf="@+id/LN"
                        app:layout_constraintStart_toStartOf="@+id/FN"
                        app:layout_constraintTop_toBottomOf="@+id/Phone" />

                    <EditText
                        android:id="@+id/State"
                        android:layout_width="290dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="55dp"
                        android:background="@drawable/tiket"
                        android:elevation="10dp"
                        android:ems="10"
                        android:hint="Input State"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        app:layout_constraintEnd_toEndOf="@+id/LN"
                        app:layout_constraintStart_toStartOf="@+id/FN"
                        app:layout_constraintTop_toBottomOf="@+id/City" />

                    <EditText
                        android:id="@+id/Payment"
                        android:layout_width="290dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="55dp"
                        android:layout_marginBottom="100dp"
                        android:background="@drawable/tiket"
                        android:elevation="10dp"
                        android:ems="10"
                        android:hint="Input Payment"
                        android:inputType="number"
                        android:paddingStart="10dp"
                        app:layout_constraintEnd_toEndOf="@+id/LN"
                        app:layout_constraintStart_toStartOf="@+id/FN"
                        app:layout_constraintTop_toBottomOf="@+id/State" />

                    <TextView
                        android:id="@+id/Date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Date Travelling"
                        android:textSize="23dp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="@+id/Email"
                        app:layout_constraintTop_toBottomOf="@+id/Email" />

                    <TextView
                        android:id="@+id/Birth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Birthday"
                        android:textSize="23dp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="@+id/DateT"
                        app:layout_constraintTop_toBottomOf="@+id/DateT" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Address"
                        android:textSize="23dp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="@+id/Birthday"
                        app:layout_constraintTop_toBottomOf="@+id/Birthday" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Phone"
                        android:textColor="@color/black"
                        android:textSize="23dp"
                        app:layout_constraintStart_toStartOf="@+id/Address"
                        app:layout_constraintTop_toBottomOf="@+id/Address" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="City"
                        android:textColor="@color/black"
                        android:textSize="23dp"
                        app:layout_constraintStart_toStartOf="@+id/Phone"
                        app:layout_constraintTop_toBottomOf="@+id/Phone" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="State"
                        android:textSize="23dp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="@+id/City"
                        app:layout_constraintTop_toBottomOf="@+id/City" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Payment"
                        android:textSize="23dp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="@+id/State"
                        app:layout_constraintTop_toBottomOf="@+id/State" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/Pay"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:text="Payment"
        android:textColor="@color/white"
        android:backgroundTint="@color/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

</androidx.constraintlayout.widget.ConstraintLayout>
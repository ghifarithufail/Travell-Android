<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2D2D2"
    tools:context=".Home">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="437dp"
        android:layout_height="279dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bedugul"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/roboto"
        android:text="Find Your"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="418dp"
        android:layout_height="396dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Top Views"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <HorizontalScrollView
                android:id="@+id/topviewsScrollView"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:animateLayoutChanges="false"
                        app:cardBackgroundColor="#DCDCDC"
                        >

                        <TextView
                            android:id="@+id/lawangsewu"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="21dp"
                            android:fontFamily="@font/roboto"
                            android:text="Lawang Sewu"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="21dp"
                            android:fontFamily="@font/roboto"
                            android:text="Rp 3.500.000"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginEnd="21dp"
                            android:fontFamily="@font/roboto"
                            android:text="Semarang"
                            android:textColor="@color/black" />

                        <ImageButton
                            android:id="@+id/semarang"
                            android:layout_width="200dp"
                            android:layout_height="112dp"
                            android:layout_centerHorizontal="false"
                            android:layout_marginTop="70dp"
                            android:backgroundTint="#DCDCDC"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/lawangsewu"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="180dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:animateLayoutChanges="false"
                        app:cardBackgroundColor="#DCDCDC">

                        <TextView
                            android:id="@+id/sentani"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="21dp"
                            android:fontFamily="@font/roboto"
                            android:text="Sentani"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="21dp"
                            android:fontFamily="@font/roboto"
                            android:text="Rp 5.500.000"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginEnd="21dp"
                            android:fontFamily="@font/roboto"
                            android:text="Papua"
                            android:textColor="@color/black" />

                        <ImageButton
                            android:id="@+id/sentanipic"
                            android:layout_width="200dp"
                            android:layout_height="112dp"
                            android:layout_centerHorizontal="false"
                            android:layout_marginTop="70dp"
                            android:backgroundTint="#DCDCDC"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/sentani"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </androidx.cardview.widget.CardView>



                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:animateLayoutChanges="false"
                        app:cardBackgroundColor="#DCDCDC">

                        <TextView
                            android:id="@+id/pulaukomodo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="21dp"
                            android:fontFamily="@font/roboto"
                            android:text="Pulau Komodo"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="21dp"
                            android:fontFamily="@font/roboto"
                            android:text="Rp 7.500.000"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginEnd="21dp"
                            android:fontFamily="@font/roboto"
                            android:text="Nusa Tenggara Timur"
                            android:textColor="@color/black" />

                        <ImageButton
                            android:id="@+id/pulaukpic"
                            android:layout_width="200dp"
                            android:layout_height="112dp"
                            android:layout_centerHorizontal="false"
                            android:layout_marginTop="70dp"
                            android:backgroundTint="#DCDCDC"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/komodo"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Top Places"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/topviewsScrollView" />

            <HorizontalScrollView
                android:id="@+id/topplacesScrollView"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:animateLayoutChanges="false"
                        app:cardBackgroundColor="#DCDCDC">

                        <TextView
                            android:id="@+id/bromo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="21dp"
                            android:fontFamily="@font/roboto"
                            android:text="Bromo"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="21dp"
                            android:fontFamily="@font/roboto"
                            android:text="Rp 3.500.000"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginEnd="21dp"
                            android:fontFamily="@font/roboto"
                            android:text="Malang"
                            android:textColor="@color/black" />

                        <ImageButton
                            android:id="@+id/bromopic"
                            android:layout_width="200dp"
                            android:layout_height="112dp"
                            android:layout_centerHorizontal="false"
                            android:layout_marginTop="70dp"
                            android:backgroundTint="#DCDCDC"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/bromo"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:animateLayoutChanges="false"
                        app:cardBackgroundColor="#DCDCDC">

                        <TextView
                            android:id="@+id/tanahlot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="21dp"
                            android:fontFamily="@font/roboto"
                            android:text="Tanah Lot"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="21dp"
                            android:fontFamily="@font/roboto"
                            android:text="Rp 4.500.000"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginEnd="21dp"
                            android:fontFamily="@font/roboto"
                            android:text="Bali"
                            android:textColor="@color/black" />

                        <ImageButton
                            android:id="@+id/tanahlotpic"
                            android:layout_width="200dp"
                            android:layout_height="112dp"
                            android:layout_centerHorizontal="false"
                            android:layout_marginTop="70dp"
                            android:backgroundTint="#DCDCDC"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/tanahlot"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:animateLayoutChanges="false"
                        app:cardBackgroundColor="#DCDCDC">

                        <TextView
                            android:id="@+id/wakatobi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="21dp"
                            android:fontFamily="@font/roboto"
                            android:text="Wakatobi"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="21dp"
                            android:fontFamily="@font/roboto"
                            android:text="Rp 8.500.000"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginEnd="21dp"
                            android:fontFamily="@font/roboto"
                            android:text="Sulawesi Tenggara"
                            android:textColor="@color/black" />

                        <ImageButton
                            android:id="@+id/wakatobipic"
                            android:layout_width="200dp"
                            android:layout_height="112dp"
                            android:layout_centerHorizontal="false"
                            android:layout_marginTop="70dp"
                            android:backgroundTint="#DCDCDC"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/wakatobi"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Next Destination"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6C6F71"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/nav_bottom_bar" />



</androidx.constraintlayout.widget.ConstraintLayout>